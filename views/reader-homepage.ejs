<!DOCTYPE html>
<html>

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <!-- External links for bootstrap & icon library -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Reader Home-Page</title>
  </head>

  <body style="background: #1B2631;;">

    <!-- Header -->
    <header class="navbar navbar-expand-lg navbar-dark" style="background: #1B2631; padding: 0.75rem 2rem; box-shadow: 0 2px 6px rgba(0,0,0,0.3); border-radius: 0 0 15px 15px;">
      <!-- Left: Logo -->
      <div class="navbar-brand mb-0">
        <%- include('partials/logo') %>
      </div>
      <!-- Right: Back button -->
      <div class="ml-auto">
        <a href="/blog/back-to-homepage" class="btn btn-outline-light btn-sm">
          <i class="fa fa-arrow-circle-left"></i> Back
        </a>
      </div>
    </header>


    <!-- Main content -->
    <main class="container my-4 text-white">

      <!-- Reader's Greeting -->
      <div class="my-4 p-5 text-center shadow-lg"
          style="background: linear-gradient(90deg, #0F3B47, #08525e); border-radius: 20px;">
        <% names.forEach(name => { %>
          <h2 class="mb-3 text-white">
            ðŸ‘‹ Welcome to <strong><%= name.author_name %></strong>â€™s Blog
          </h2>
          <p class="lead mb-2 text-light">
            "<%= name.author_about %>"
          </p>
          <p class="small text-muted">
            Explore insights, stories, and ideas shared by <%= name.author_name %>.
          </p>
        <% }); %>
      </div>

      <hr class="my-4 bg-dark">

      <!-- Published Blogs Grid -->
      <h3 class="text-center mb-4">ðŸ“š Recent Publications</h3>
      <div class="row g-4">
        <% blogs.forEach(blog => { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm border-0" style="background: linear-gradient(135deg, #0F3B47, #08525e); border-radius: 15px;">
              <div class="card-body d-flex flex-column">
                <h4 class="card-title text-white mb-3"><%= blog.blog_title %></h4>
                <p class="card-text text-muted mb-4">
                  Published: <%= blog.formattedDate %>
                </p>
                <a href="/blog/reader-blog/<%= blog.publish_id %>" class="btn btn-info mt-auto align-self-start px-4 rounded-pill">
                  Read More â†’
                </a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>

      <hr class="my-4 bg-dark">
    </main>

  </body>

</html>